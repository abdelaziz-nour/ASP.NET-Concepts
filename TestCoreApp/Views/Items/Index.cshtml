@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <partial name="_Notification"/>
    <div class="row" pt-4>
        <div class="col-6">
            <h2 class="text-primary"> items View  </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-outline-success mb-3">
                <i class="bi bi-plus"></i>  add
            </a>
        </div>
    </div>

    <table class="table table-bordred table-striped" style="swidth 100%">
        <thead>
            <tr class="table-active">
                <th scope="col">
                    Img
                </th>
                <th>
                    name
                </th>
                <th>
                    price
                </th>
                <th>
                    Category
                </th>

                <th>

                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (Item item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@item.imagePath" style="width:48px" class="img-thumbnail" />
                    </td>
                    <td width="20%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.Price
                    </td>
                    <td width="20%">
                        @item.Category.Name
                    </td>
                    <td>
                        &nbsp;
                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-outline-info">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>


